{
  "manifest_version": 2,

  "name": "Tiny Todo List",
  "short_name": "TTL",
  "description": "简洁TodoList",
  "version": "0.1.0",

  "browser_action": {
    "default_title": "SPS",
    "default_icon": "logo.png",
    "default_popup": "popup.html"
  },

  "background": {
    "page": "background.html"
  },
  
  "icons": {
    "128": "logo.png",
    "16": "logo.png",
    "48": "logo.png"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "webRequest",
    "cookies",
    "webRequestBlocking",
    "notifications"
  ]

}